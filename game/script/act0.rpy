label start_intro:

    #=====================================================================
    # Episode 1 : La grotte.
    #=====================================================================
    
    
    # image bg = "scene_intro_grotte_1.png" (grotte) 
    # image bg = "scene_intro_water_1.png" (eau qui coule)
    # image bg = "scene_intro_water_mc_1.png" (mc_thought qui boit de l'eau)
    # image bg = "scene_intro_water_mc_2.png" (mc_thought qui boit de l'eau)
    # image bg = "scene_intro_grotte_2.png" (plan large grotte)
    # image bg = "scene_intro_grotte_3.png" (plan large grotte)
    # image bg = "scene_intro_grotte_4.png" (plan large grotte vers lumière)    
    
    mc_thought "Qu'est-ce qui s'est passé ?"
    mc_thought "Je suis où là ?"
    mc_thought "Dans une grotte..."
    mc_thought "Il fait sombre, mais au moins ..."
    mc_thought "Il y a de l'eau qui coule. J'ai soif !!!"
    
    # MC va boire de l'eau.
    
    mc_thought "Ahhhhhh !"
    mc_thought "C'est bon !"
    
    mc_thought "Je vais sortir de cette grotte et voir où je suis..."
    
    # Mc = marche jusqu'à la sortie de la grotte.
    # image bg = "scene_intro_grotte_5.png" (sortie grotte)
    # image bg = "scene_intro_grotte_6.png" (sortie grotte)
    # image bg = "scene_intro_grotte_7.png" (sortie grotte)
    
    mc_thought "Je me sens bizarre..."
    mc_thought "Cette eau me donne des vertiges, mais ce n'est pas désagréable..."
    mc_thought "Je me sens léger..."
    mc_thought "Je me sens bien..."
    mc_thought "Je sens que je suis en communion avec le monde..."
    
    # MC une lumière se diffuse autour du MC.
    # image bg = "scene_intro_mc_light_1.png" (Magie MC)
    # image bg = "scene_intro_mc_light_2.png" (Magie MC)
    
    # MC regarde sa main qui brille.
    # image bg = "scene_intro_hand_light_1.png" (paume)
    # image bg = "scene_intro_hand_light_2.png" (dos de la main)
    
    # MC regarde ses mains qui brillent.
    # image bg = "scene_intro_hands_light.png" (mains)
    
    mc_thought "Qu'est-ce qui m'arrive ?"
    
    # MC sourit et regarde sa main. 
    mc_thought "J'ai des pouvoirs magiques ?"
    
    # MC lève le bras et fait briller sa main.
    mc_thought "Je peux faire de la magie !!!"
    mc_thought "YES !!!!"
    
    # MC marche vers l'intérieur de la grotte en s'éclairant de ses mains.
    mc_thought "si je peux éclairer comme ça, je vais regarder le fond de la grotte avant de sortir."
    
    # MC se retourne et fait marche arrière. 
    # image bg = "scene_intro_grotte_5.png" (sortie grotte)
    
    # MC de dos marche dans un tunnel sombre.
    # image bg = "scene_intro_grotte_8.png" (tunnel sombre)
    mc_thought "Il y aura peut-être des trucs pour m'habiller car je suis à poil quand même..."
    
    # MC trouve un endroit où il y a touts sortes de choses.
    mc_thought "Ah yes !!!"
    # image bg = "scene_intro_squat.png" (grotte)
    # image bg = "scene_intro_squat_2.png" (grotte)
    mc_thought "Il y a plein de trucs ici..."
    mc_thought "Je vais fouiller un peu..."

    # image bg = "scene_intro_squat_3.png" (grotte)
    mc_thought "Il y a des vêtements... troués et tachés de sang..."
    # image bg = "scene_intro_squat_4.png" (grotte)
    mc_thought "Mais bon, je n'ai pas le choix..."
    
    mc_thought "j'irai les laver à la fontaine magique..."
    mc_thought "Je vais prendre ça..."
    # image bg = "scene_intro_squat_5.png" (grotte)
    mc_thought "Et ça..."
    
    # En prenant les vêtements, le MC trouve un vieux livre et une carte.
    # image bg = "scene_intro_squat_6.png" (grotte)
    mc_thought "Qu'est ce que c'est que ça ?"
    # image bg = "scene_intro_squat_book.png" (grotte)
    mc_thought "Un vieux livre..."
    
    # image bg = "scene_intro_squat_map.png" (grotte)
    mc_thought "... et une carte !!!"
    
    # image bg = "scene_intro_squat_map_2.png" (grotte) (vue de dos)
    mc_thought "Une carte de ce monde ?"
    
    # Une note tombe du livre.
    # image bg = "scene_intro_squat_note.png" (grotte)
    mc_thought "Qu'est-ce que c'est ?"
    # image bg = "scene_intro_squat_note_2.png" (grotte) --mc_thought vue de face en flou et en plan taille
    mc_thought "Une note !?"
    
    # image bg = "scene_intro_squat_note_3.png" (grotte) --mc_thought ramasse la feuille au sol.    
    mc_thought "Je vais la lire..."
    # image bg = "scene_intro_squat_note_read_1.png" (grotte) --mc_thought lit la note.
    mc_thought "..."
    # image bg = "scene_intro_squat_note_read_2.png" (grotte) --mc_thought lit la note. -- expression de visage de mc_thought.
    mc_thought "... ces symboles sont incompréhensibles..."
    # image bg = "scene_intro_squat_note_read_4.png" (grotte) --mc_thought lit la note. -- expression de visage de mc_thought.
    mc_thought "Je ne comprends rien..."
    # image bg = "scene_intro_squat_note_read_5.png" (grotte) --mc_thought lit la note. -- met la note dans sa poche.
    mc_thought "Je la garde pour plus tard."
    
    mc_thought "Je vais prendre le livre et la carte aussi..."
    # image bg = "scene_intro_squat_book_map.png" (grotte) --mc_thought prend le livre et la carte.
    
    # image bg = "scene_intro_squat_7.png" (grotte) -- mc_thought se retorune vers le fond de la grotte.
    mc_thought "Je vais voir ce qu'il y a au fond de la grotte..."
    mc_thought "Il y a peut-être d'autres choses intéressantes..."
    # image bg = "scene_intro_squat_8.png" (grotte) --mc_thought se écalire vers le fond de la grotte.
    
    mc_thought "Ohhh, mais quelle bonne surprise..."
    # image bg = "scene_intro_squat_9.png" (grotte) --mc_thought voit le lit et le feu de bois.
    
    mc_thought "Un \"lit\" et une \"cuisine\" !"
    # image bg = "scene_intro_squat_9.png" (grotte) -- mc_thought se penche vers le feu de bois..
    
    mc_thought "Il ne me reste plus qu'à trouver un sac pour transporter mes affaires et ce sera bon."
    # image bg = "scene_intro_squat_10.png" (grotte) --mc_thought se relève et regarde le bordel.
    
    # image bg = "scene_intro_squat_11.png" (grotte) --mc_thought voit le sac.
    mc_thought "Ah, et voilà !!!"
    
    # image bg = "scene_intro_squat_12.png" (grotte) --mc_thought prend le sac. sorte de ballon coupé en deux.
    mc_thought "Un \"sac\" !"
    
    # image bg = "scene_intro_mc_think_1.png" (grotte) --mc_thought se retourne et regarde le fond de la grotte.
    mc_thought "Qu'est ce que je suis censé faire maintenant ?"
    # image bg = "scene_intro_mc_think_2.png" (grotte) --mc_thought se retourne et regarde le fond de la grotte.
    # image bg = "scene_intro_mc_think_3.png" (grotte) --mc_thought se retourne et regarde le fond de la grotte.
    # image bg = "scene_intro_mc_think_4.png" (grotte) --mc_thought se retourne et regarde le fond de la grotte.
    
    # Lors du monologue du MC on passe par ces quatres images.
    
    mc_thought "Je ne sais pas où je suis..."
    mc_thought "Est-ce une bonne idée de sortir maintenant ?"
    mc_thought "Est-ce que je vais croiser des gens ?"
    mc_thought "Est-ce que je vais croiser des animaux ?"
    mc_thought "Est ce que je vais croiser des monstres ?"
    
    mc_thought " D'ailleurs, j'ai faim ..."
    mc_thought "Il va falloir que je sorte pour trouver à manger..."
    
    mc_thought "Est-ce que je reste ici et je vois ce que je peux utiliser ici ?"
    mc_thought "Cet endroit est un peu mystérieux"
    mc_thought " Et je pense qu'il y a encore des choses à découvrir..."
    mc_thought "Des armes, peut-être ?"
    mc_thought "Je vais devoir prendre le temps de fouiller un peu..."
    
    # image bg = "scene_intro_clothes_1.png" (grotte) -- mc_thought saisit les vêtements.
    mc_thought "Mais d'abord je vais prendre ces vêtements... et les laver à la fontaine magique."
    
    # image bg = "scene_intro_clothes_2.png" (grotte) -- mc_thought met les vêtements sur son épaule.
    # image bg = "scene_intro_clothes_3.png" (grotte) -- mc_thought marche vers la fontaine magique.
    mc_thought "Et moi aussi d'ailleurs..."
    
    # (MC passe du temps à la fontaine et lave les vêtements.)
    # image bg = "scene_intro_clothes_4.png" (grotte) -- mc_thought se lave.
    # image bg = "scene_intro_clothes_5.png" (grotte) -- mc_thought lave les vêtements.
    
    # image bg = "scene_intro_clothes_6.png" (grotte) -- mc_thought sort de l'eau.
    mc_thought "Ahhhhhh !"
    mc_thought "Ça fait du bien !"
    mc_thought "Je me sens beaucoup mieux !"
    
    #  Ecran noir.
    mc_thought "...Est-ce qu'il y a de quoi faire du feu ?"
    mc_thought "... Oui, pour ça, ça et ça..."
    
    mc_thought "Oh !!"
    mc_thought "Un arc et des flèches !"
    
    # Arc et flèches trouvés.
    
    mc_thought "Il me faut cette branche et cette cordelette.."
    mc_thought "Parfait" 
    
    mc_thought "Crack !!"
    mc_thought "Crack !!"
    
    # ( Mc a réussi à faire du feu avec des branches.)
    
    # image bg = "scene_intro_fire_1.png" (grotte) -- mc_thought devant le feu.
    mc_thought "Merci le barbecue." 
    # image bg = "scene_intro_fire_2.png" (grotte) -- mc_thought devant le feu.
    mc_thought "..."
    # image bg = "scene_intro_fire_3.png" (grotte) -- mc_thought devant le feu.
    mc_thought "j'ai faim..."
    # image bg = "scene_intro_fire_3.png" (grotte) -- mc_thought devant le feu.
    mc_thought "Le truc de ouf, je suis dans un monde de magie..."
    # image bg = "scene_intro_fire_4.png" (grotte) -- mc_thought devant le feu.
    mc_thought "Mais je suis où surtout.... !!!"
    
